<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark"
    android:padding="8dp"
    tools:context=".ChessActivity">

    <!-- 🧭 Thanh Toolbar có menu -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/board_bg"
        app:title="♔ Chess Game ♚"
        app:titleTextColor="@color/gold"
        app:subtitle="v1.0"
        app:subtitleTextColor="@color/white"
        app:menu="@menu/chess_menu" />

    <!-- ⚡ Hiển thị trạng thái lượt -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lượt: Quân Trắng"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <!-- ♟️ Bàn cờ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/board_bg">

        <com.example.chessgame.ui.ChessBoardView
            android:id="@+id/chessBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
