<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ChessGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/board_bg</item>
        <item name="colorSecondary">@color/gold</item>
        <item name="android:statusBarColor">@color/board_bg</item>
        <item name="android:navigationBarColor">@color/bg_dark</item>
    </style>

    <!-- Style chung cho các nút -->
    <style name="ChessButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:translationZ">4dp</item>
    </style>
</resources>
